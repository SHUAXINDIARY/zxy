<div class="hd logodiv">
    <!-- <%- image_tag('img/logo.png',{class: 'logopng'}) %> -->
    <img style="width: 50%;" src="https://img.shuaxinjs.cn/favicon-16x16-next.png" alt="logo">
    <p class="logot">
        <span class="logo_1">&lt;</span><span class="logo_2">/</span>
        <span class="logo_3">#</span>
        <%= theme.logo_title %>
        <span class="logo_3">#</span>
        <span class="logo_2">/</span>
        <span class="logo_1">&gt;</span>
    </p>
    <div class="count">
        在一起的第
        <span class="count_day">
            <%- Math.ceil((new Date()-new Date('2020-11-01'))/( 1000  *  60  *  60  *  24 )) %>
        </span>
        天
    </div>
</div>
<%- partial('_partial/nav') %>
<div class="hd">
    <% var last; %>
    <% page.posts.each(function (post) { %>
    <% var year = post.date.year(); %>
    <% if (last != year){ %>
    <div class="titlex">
        <p><span class="jing">#</span>
            <%= year %>
        </p>
    </div>
    <% last = year; %>
    <% } %>
    <a class="flink" href="<%- url_for(post.path) %>">
        <div class="list">
            <div class="postname">
                <%= post.title %>
            </div>
            <div class="posttime">
                <%- full_date(post.date, 'MMMM Do') %>
            </div>
        </div>
    </a>
    <% }) %>
</div>